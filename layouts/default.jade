doctype html
html.app
  head
    meta(charset='utf-8')
    link(rel='mask-icon', href='#{hostUrl}icon.svg', color='#E86947')
    link(rel='shortcut Icon', href='#{hostUrl}icon256.png', type='image/x-icon')
    link(rel='apple-touch-icon', href='#{hostUrl}icon144.png', sizes='144x144')

    block head
      title #{title}
    meta(name='description', content='app, web app, responsive, admin dashboard, admin, flat, flat ui, ui kit, off screen nav')
    meta(name='viewport', content='width=device-width, initial-scale=1, maximum-scale=1')
    link(rel='stylesheet', href='#{hostUrl}css/bootstrap.css?#{cacheBreaker}', type='text/css')
    link(rel='stylesheet', href='#{hostUrl}css/app.css?#{cacheBreaker}', type='text/css')
    block neck
  body.container
    section.vbox
      header.bg-danger.header.header-md.navbar.navbar-fixed-top-xs.box-shadow
        .navbar-header.aside-md.dk
          a.btn.btn-link.visible-xs(data-toggle='class:nav-off-screen', data-target='#nav')
            i.fa.fa-bars
          a.navbar-brand(href='/')
            span.hidden-nav-xs #{projectName}
          a.btn.btn-link.visible-xs(data-toggle='dropdown', data-target='.user')
            i.fa.fa-cog
        form.navbar-form.navbar-left.input-s-lg.m-t.m-l-n-xs.hidden-xs(role='search', action='/movies/')
          .form-group
            .input-group
              span.input-group-btn
                button.btn.btn-sm.bg-white.b-white.btn-icon(type='submit')
                  i.fa.fa-search
              input.form-control.input-sm.no-border(type='text', name='query', placeholder='Поиск...')
        ul.nav.navbar-nav.navbar-right.m-n.hidden-xs.nav-user.user
          if user && user.username
            li.dropdown
              a.dropdown-toggle(href='#{user.defaultReturnUrl}', data-toggle='dropdown')
                span.thumb-sm.avatar.pull-left
                  img(src='#{hostUrl}images/a0.png', alt='#{user.username}')
                | #{user.username}
                b.caret
              ul.dropdown-menu.animated.fadeInRight
                li
                  span.arrow.top
                  a(href='/account/settings/') Настройки
                li
                  a(href='/account/'+user.username) Профиль
                li.divider
                li
                  a.auto(href='/about/')
                    i.i.i-statistics.icon
                    span.font-bold О сайте
                li
                  a.auto(href='/about/contact/')
                    i.i.i-statistics.icon
                    span.font-bold Контакты
                li
                  a.auto(href='/about/faq/')
                    i.i.i-statistics.icon
                    span.font-bold FAQ
                li
                  a.auto(href='/pro/')
                    i.i.i-statistics.icon
                    span.font-bold PRO аккаунт
                li.divider
                li
                  a(href='/logout/') Выйти
          else
            li: a(href='/login/')
              i.fa.fa-user
              |  Войти

      section
        section.hbox.stretch
          // .aside
          aside#nav.bg-dark.aside-md.hidden-print
            section.vbox
              section.w-f.scrollable(data-height='auto', data-disable-fade-out='true', data-distance='0', data-size='10px', data-railopacity='0.2')
                  // nav
                  nav.nav-primary.hidden-xs
                    ul.nav.nav-main(data-ride='collapse')
                      li
                        a.auto(href='/account/' + user.username + '/wishlist/')
                          i.i.i-statistics.icon
                          span.font-bold Буду смотреть
                      li
                        a.auto(href='/account/'+user.username+'/charts/directors/')
                          i.i.i-statistics.icon
                          span.font-bold Чарт режисёров
                      li
                        a.auto(href='/account/'+user.username+'/charts/actors/')
                          i.i.i-statistics.icon
                          span.font-bold Чарт актёров
                      li
                        a.auto(href='/account/'+user.username+'/friends/')
                          i.i.i-statistics.icon
                          span.font-bold Друзья (те за кем наблюдаю)

                  // / nav
              footer.footer.hidden-xs.no-padder.text-center-nav-xs
                a.btn.btn-icon.icon-muted.btn-inactive.m-l-xs.m-r-xs(href='#nav', data-toggle='class:nav-xs')
                  i.i.i-circleleft.text
                  i.i.i-circleright.text-active
          // /.aside
          section#content
            block body

    script(src='#{hostUrl}js/jquery.js?#{cacheBreaker}')
    // Bootstrap
    script(src='#{hostUrl}js/bootstrap.js?#{cacheBreaker}')
    // App
    script(src='#{hostUrl}js/app.js?#{cacheBreaker}')

    script(src='#{hostUrl}js/jquery.cookie.js?#{cacheBreaker}')
    script(src='#{hostUrl}js/core.js?#{cacheBreaker}')

    block feet
